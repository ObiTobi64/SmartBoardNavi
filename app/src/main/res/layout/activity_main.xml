<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="edu.upb.lp.core.activities.AndroidGameActivity"
    tools:ignore="NestedWeights">

    <!-- Toolbar para el título -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

<!--    &lt;!&ndash; FrameLayout para superposición &ndash;&gt;-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <!-- Tablero -->
        <TableLayout
            android:id="@+id/maingrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*" />

        <!-- Marcador superpuesto -->
        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/score_background"
            android:padding="8dp"
            android:text="Score: 0"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_margin="8dp" />
    </FrameLayout>

    <!-- Sección inferior para botones y mensajes -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false">

        <!-- Botones en la parte izquierda -->
        <ScrollView
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_width="0dp">
            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

        <!-- Mensajes en la parte derecha -->
        <ScrollView
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_width="0dp">
            <LinearLayout
                android:id="@+id/messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>
    </LinearLayout>

</LinearLayout>